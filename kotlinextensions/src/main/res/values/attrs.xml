<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PinEditText">
        <attr name="pinNormalStateDrawable" format="reference"/>
        <attr name="pinHighlightStateDrawable" format="reference"/>
        <attr name="pinWidth" format="dimension|reference"/>
        <attr name="pinHeight" format="dimension|reference"/>
        <attr name="pinSpace" format="dimension|reference"/>
    </declare-styleable>


    <declare-styleable name="DividerView">
        <attr name="color" format="color" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

</resources>